# Example Terraform variables file for Shopping Website Microservices

app_name    = "shopping-website"
namespace   = "shopping-app"
environment = "dev"

kubeconfig_path = "~/.kube/config"

log_level   = "info"
api_version = "v1"

jwt_secret        = "your-super-secret-jwt-key-change-this"
db_password       = "your-secure-database-password"
rabbitmq_password = "your-secure-rabbitmq-password"

rabbitmq_chart_version = "11.8.0"
ingress_chart_version  = "4.7.1"

replicas        = 2
cpu_requests    = "100m"
memory_requests = "128Mi"
cpu_limits      = "200m"
memory_limits   = "256Mi"

ingress_host = "shopping-app.local"
ingress_port = 80

enable_monitoring = false
enable_logging    = false


